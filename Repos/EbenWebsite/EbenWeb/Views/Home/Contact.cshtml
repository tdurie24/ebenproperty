<script type="text/javascript">
    function SendEmail() {
 var ContactModel = {
            Name: $("#Name").val()
            , Email: $("#Email").val()
            , Phone: $("#Phone").val()
            , Service: $("#Service").val()
            , Message: $("#Message").val()
        };
        var url = "@Url.Action("Contact", "Home")"
        $.post(url, ContactModel, function (res) {
            alert("Message has been successfully sent!");
        });

        $("#Name").val('');
        $("#Email").val('');
        $("#Phone").val('');
        $("#Service").val('');
        $("#Message").val('');
        

    }
</script>